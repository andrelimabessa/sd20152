public class Gerenciamento extends javax.swing.JFrame {

	private final static Integer nenhumaLinhaSelecionada = -1;
	private final static String newline = "\n";

	private PessoaService pessoaService;
	private LocacaoService locacaoService;
	private EstoqueService estoqueService;

	private Integer indiceLinhaTabelaCliente;
	private Integer indiceLinhaTabelaFilme;
	private Integer indiceLinhaTabelaFuncionario;

	/**
	 * Creates new form Gerenciamento
	 */
	public Gerenciamento() {
		initComponents();

		indiceLinhaTabelaCliente = nenhumaLinhaSelecionada;
		indiceLinhaTabelaFilme = nenhumaLinhaSelecionada;
		indiceLinhaTabelaFuncionario = nenhumaLinhaSelecionada;

		pessoaService = new PessoaService();
		locacaoService = new LocacaoService();
		estoqueService = new EstoqueService();

		carregarClientes(pessoaService.oberterTodosClientes());
		carregarFuncionarios(pessoaService.oberterTodosFuncionarios());
		carregarFilme(estoqueService.obterFilmes());
		carregarRegistroLocacao(locacaoService.obterRegistrosLocacao());
		
		
	}

	private void carregarClientes(Collection<Pessoa> colecaoPessoa) {

		for (Pessoa pessoa : colecaoPessoa) {

			// Obtem o modelo da JTable
			DefaultTableModel modelo = (DefaultTableModel) tableCliente
					.getModel();
			// Adiciona uma nova linha em branco no modelo
			modelo.addRow(new String[] { pessoa.getId().toString(),
					pessoa.getNome(), pessoa.getEndereco() });

		}
	}
	
	private void carregarFuncionarios(Collection<Funcionario> colecaoFuncionario){
		
		for (Funcionario funcionario : colecaoFuncionario) {

			// Obtem o modelo da JTable
			DefaultTableModel modelo = (DefaultTableModel) tableFuncionarios
					.getModel();
			// Adiciona uma nova linha em branco no modelo
			modelo.addRow(new String[] { funcionario.getId().toString(), 
					funcionario.getNome(), funcionario.getSalario().toString(), 
					funcionario.getCargaHoraria().toString() });

		}
	}
	
	private void carregarFilme(Collection<Estoque> colecaoEstoque){
		
		for (Estoque estoque : colecaoEstoque) {

			// Obtem o modelo da JTable
			DefaultTableModel modelo = (DefaultTableModel) tableFilmes
					.getModel();
			// Adiciona uma nova linha em branco no modelo
			modelo.addRow(new String[] { estoque.getFilme().getId().toString(),
					estoque.getFilme().getNome(),
					estoque.getFilme().getCensura().toString(),
					estoque.getQuantidade().toString(),
					estoque.getDisponibilidade().toString() });

		}
	}
	
	private void carregarRegistroLocacao(Collection<Registro> colecaoRegistro){
		
		for (Registro registro : colecaoRegistro) {

			// Obtem o modelo da JTable
			DefaultTableModel modelo = (DefaultTableModel) tableSituacaoCliente
					.getModel();
			// Adiciona uma nova linha em branco no modelo
			modelo.addRow(new String[] { 
					registro.getId().toString(),
					registro.getCliente().getId().toString(),
					registro.getFuncionario().getId().toString(),
					registro.getFilmeLocado().getId().toString()});

		}
	}

