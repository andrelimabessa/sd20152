	private void botaoNovoClienteActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoNovoClienteActionPerformed

		// TODO add your handling code here:
		dialogCadastrarClientes.setLocationRelativeTo(this);
		dialogCadastrarClientes.setVisible(true);
	}// GEN-LAST:event_botaoNovoClienteActionPerformed

	private void efetuarNovoCadatroCliente(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_efetuarNovoCadatroCliente

		inserirRegistroTabelaCliente(textFieldIdentificacao.getText(),
				textFieldNome.getText(), textFieldEndereco.getText());

		dialogCadastrarClientes.setVisible(false);

		textFieldNome.setText(null);
		textFieldEndereco.setText(null);
		textFieldIdentificacao.setText(null);

	}// GEN-LAST:event_efetuarNovoCadatroCliente

	private void inserirRegistroTabelaCliente(String id, String nome,
			String endereco) {

		Cliente cliente = new Cliente();

		cliente.setId(new Long(id));
		cliente.setEndereco(endereco);
		cliente.setNome(nome);

		pessoaService.adicionarNovoCliente(cliente);

		// Obtem o modelo da JTable
		DefaultTableModel modelo = (DefaultTableModel) tableCliente.getModel();
		// Adiciona uma nova linha em branco no modelo
		modelo.addRow(new String[] { id, nome, endereco });

	}

	private void tableClienteMouseClicked(java.awt.event.MouseEvent evt) {// GEN-FIRST:event_tableClienteMouseClicked
		// TODO add your handling code here:

		if (SwingUtilities.isLeftMouseButton(evt)) {
			// get the coordinates of the mouse click
			Point p = evt.getPoint();

			// get the row index that contains that coordinate
			indiceLinhaTabelaCliente = tableCliente.rowAtPoint(p);

		}

	}// GEN-LAST:event_tableClienteMouseClicked
	
	private void botaoExportarActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoLocarActionPerformed
		pessoaService.exportarRegistro();
		estoqueService.exportarRegistro();
		locacaoService.exportarRegistro();
	}

	private void botaoLocarActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoLocarActionPerformed

		if (indiceLinhaTabelaCliente > nenhumaLinhaSelecionada
				&& indiceLinhaTabelaFilme > nenhumaLinhaSelecionada
				&& indiceLinhaTabelaFuncionario > nenhumaLinhaSelecionada) {

			// Obtem o modelo da JTable
			DefaultTableModel modeloCliente = (DefaultTableModel) tableCliente
					.getModel();
			String idCliente = (String) modeloCliente.getValueAt(
					indiceLinhaTabelaCliente, 0);

			// Obtem o modelo da JTable
			DefaultTableModel modeloFuncionario = (DefaultTableModel) tableFuncionarios
					.getModel();
			String idFuncionario = (String) modeloFuncionario.getValueAt(
					indiceLinhaTabelaFuncionario, 0);

			// Obtem o modelo da JTable
			DefaultTableModel modeloFilme = (DefaultTableModel) tableFilmes
					.getModel();
			String idFilme = (String) modeloFilme.getValueAt(
					indiceLinhaTabelaFilme, 0);

			inserirRegistroTabelaSituacaoCliente(idCliente, idFuncionario,
					idFilme);

		}

	}// GEN-LAST:event_botaoLocarActionPerformed

	private void tableFuncionariosMouseClicked(java.awt.event.MouseEvent evt) {// GEN-FIRST:event_tableFuncionariosMouseClicked

		if (SwingUtilities.isLeftMouseButton(evt)) {
			// get the coordinates of the mouse click
			Point p = evt.getPoint();

			// get the row index that contains that coordinate
			indiceLinhaTabelaFuncionario = tableFuncionarios.rowAtPoint(p);

		}

	}// GEN-LAST:event_tableFuncionariosMouseClicked

	private void tableFilmesMouseClicked(java.awt.event.MouseEvent evt) {

		if (SwingUtilities.isLeftMouseButton(evt)) {
			// get the coordinates of the mouse click
			Point p = evt.getPoint();

			// get the row index that contains that coordinate
			indiceLinhaTabelaFilme = tableFilmes.rowAtPoint(p);

		}
	}

	private void botaoNovoFuncionárioActionPerformed(
			java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoNovoFuncionárioActionPerformed
		// TODO add your handling code here:
		dialogCadastrarFuncionario.setLocationRelativeTo(this);
		dialogCadastrarFuncionario.setVisible(true);
	}// GEN-LAST:event_botaoNovoFuncionárioActionPerformed

	private void botaoCadastrarFuncionarioActionPerformed(
			java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoCadastrarFuncionarioActionPerformed

		inserirRegistroTabelaFuncionario(textFieldNomeFuncionario.getText(),
				textFieldIDFuncionario.getText(),
				textFieldEnderecoFuncionario.getText(),
				textFieldCargaHorariaFuncionario.getText(),
				textFieldSalarioFuncionario.getText());

		dialogCadastrarFuncionario.setVisible(false);

		textFieldNomeFuncionario.setText(null);
		textFieldEnderecoFuncionario.setText(null);
		textFieldIDFuncionario.setText(null);
		textFieldSalarioFuncionario.setText(null);
		textFieldCargaHorariaFuncionario.setText(null);

	}// GEN-LAST:event_botaoCadastrarFuncionarioActionPerformed

	private void botaoNovoFilmeActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoNovoFilmeActionPerformed

		dialogCadastrarFilme.setLocationRelativeTo(this);
		dialogCadastrarFilme.setVisible(true);

	}// GEN-LAST:event_botaoNovoFilmeActionPerformed

	private void botaoCadastrarFilmeActionPerformed(
			java.awt.event.ActionEvent evt) {// GEN-FIRST:event_botaoCadastrarFilmeActionPerformed
		// TODO add your handling code here:

		inserirRegistroTabelaFilme(textFieldNomeFilme.getText(),
				textFieldAnoFilme.getText(), textFieldCensuraFilme.getText(),
				textFieldCopiasFilme.getText());

		dialogCadastrarFilme.setVisible(false);

		textFieldNomeFilme.setText(null);
		textFieldAnoFilme.setText(null);
		textFieldCensuraFilme.setText(null);
		textFieldCopiasFilme.setText(null);

	}// GEN-LAST:event_botaoCadastrarFilmeActionPerformed

	private void inserirRegistroTabelaSituacaoCliente(String idCliente,
			String idFuncionario, String idFilme) {

		Registro registro = locacaoService.locarFilme(new Long(idCliente),
				new Long(idFuncionario), new Integer(idFilme));

		// Obtem o modelo da JTable
		DefaultTableModel modelo = (DefaultTableModel) tableSituacaoCliente
				.getModel();
		// Adiciona uma nova linha em branco no modelo
		modelo.addRow(new String[] { registro.getId().toString(),
				registro.getCliente().getNome(),
				registro.getFuncionario().getNome(),
				registro.getFilmeLocado().getNome() });
		
		inserirEventoRegistro("O filme " + registro.getFilmeLocado().getNome() + 
				" foi locado para o cliente: " + registro.getCliente().getNome() +
				"pelo funcionário " + registro.getFuncionario().getNome());

	}

	private void inserirRegistroTabelaFuncionario(String nome, String id,
			String endereco, String cargaHoraria, String salario) {

		Funcionario funcionario = new Funcionario();

		funcionario.setId(new Long(id));
		funcionario.setNome(nome);
		funcionario.setEndereco(endereco);
		funcionario.setCargaHoraria(new Integer(cargaHoraria));
		funcionario.setSalario(new Integer(salario));

		pessoaService.adicionarNovoFucionario(funcionario);
		
		// Obtem o modelo da JTable
		DefaultTableModel modelo = (DefaultTableModel) tableCliente.getModel();
		// Adiciona uma nova linha em branco no modelo
		modelo.addRow(new String[] { funcionario.getId().toString(), funcionario.getNome(), funcionario.getEndereco()});
		
		// Obtem o modelo da JTable
		modelo = (DefaultTableModel) tableFuncionarios
				.getModel();
		// Adiciona uma nova linha em branco no modelo
		modelo.addRow(new String[] { id, nome, salario, cargaHoraria });

	}

	private void inserirRegistroTabelaFilme(String nome, String ano,
			String censura, String copias) {

		Filme filme = new Filme();

		filme.setNome(nome);
		filme.setAno(new Integer(ano));
		filme.setCensura(new Integer(censura));

		Estoque estoque = estoqueService.adicionarNovoFilme(filme, new Integer(
				copias));

		// Obtem o modelo da JTable
		DefaultTableModel modelo = (DefaultTableModel) tableFilmes.getModel();

		// Adiciona uma nova linha em branco no modelo
		modelo.addRow(new String[] { estoque.getFilme().getId().toString(),
				estoque.getFilme().getNome(),
				estoque.getFilme().getCensura().toString(),
				estoque.getQuantidade().toString(),
				estoque.getDisponibilidade().toString() });

	}

	private void inserirEventoRegistro(String registro) {

		areaRegistros.append(registro + newline);
	}

